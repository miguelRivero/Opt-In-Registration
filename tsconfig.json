{
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules/*",
		"__sapper__/*",
		"public/*"
	],
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "es6",
		"importsNotUsedAsValues": "remove",
		"isolatedModules": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"src": [
				"src"
			]
		},
		"types": [
			"svelte",
			"svelte/store",
			"svelte/motion",
			"svelte/transition",
			"svelte/animate",
			"svelte/easing"
		]
	}
}